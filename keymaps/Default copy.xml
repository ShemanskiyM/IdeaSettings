<keymap version="1" name="Default copy" parent="$default">
  <action id="MaximizeActiveDialog">
    <keyboard-shortcut first-keystroke="alt m" />
  </action>
  <action id="ToggleDistractionFreeMode">
    <keyboard-shortcut first-keystroke="shift ctrl alt x" />
  </action>
  <action id="ToggleFullScreen">
    <keyboard-shortcut first-keystroke="alt f11" />
  </action>
  <action id="TogglePresentationMode">
    <keyboard-shortcut first-keystroke="shift ctrl alt z" />
  </action>
</keymap>